{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "enabledMcpjsonServers": [
    "serena"
  ],
  "permissions": {
    "allow": [
      "Bash(rg:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git branch:*)",
      "Bash(pnpm run:*)",
      "Bash(npx tsc:*)",
      "Bash(mv:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(pnpm add:*)",
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Bash(hub hub:*)",
      "mcp__serena__list_dir",
      "mcp__serena__get_symbols_overview",
      "mcp__serena__find_symbol",
      "mcp__serena__read_memory",
      "mcp__serena__write_memory",
      "mcp__serena__think_about_collected_information"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path | select(endswith(\".js\") or endswith(\".ts\")) or endswith(\"jsx\") or endswith(\"tsx\"))' | xargs -r pnpx biome format --write"
          }
        ]
      },
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path | select(endswith(\".md\"))' | xargs -r pnpx prettier --write"
          }
        ]
      }
    ]
  }
}
